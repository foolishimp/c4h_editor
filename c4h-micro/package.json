{
  "name": "c4h-editor",
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "start": "concurrently -n \"config-editor,shell\" -c \"blue,green\" \"npm run start:config-editor\" \"wait-on http://localhost:3001 && npm run start:shell\"",
    "start:shell": "npm run start -w packages/shell",
    "start:config-editor": "npm run start -w packages/config-editor",
    "dev:setup": "node scripts/setup-dev-environment.js",
    "dev:direct": "node scripts/dev-direct.js",
    "build": "npm run build:shared && npm run build:config-editor && npm run build:shell",
    "build:shared": "npm run build -w packages/shared",
    "build:shell": "npm run build -w packages/shell",
    "build:config-editor": "npm run build -w packages/config-editor"
  },
  "devDependencies": {
    "@types/node": "^22.13.10",
    "@types/react": "^18.2.61",
    "@types/react-dom": "^18.2.19",
    "concurrently": "^8.2.2",
    "wait-on": "^7.2.0", 
    "typescript": "^5.3.3"
  }
}